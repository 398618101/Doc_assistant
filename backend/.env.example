# 应用配置
APP_NAME="智能文档助理"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# LM Studio配置
LM_STUDIO_BASE_URL=http://192.168.1.3:1234
LM_STUDIO_API_KEY=""
LM_STUDIO_MODEL_NAME="default"

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME="llama2"

# 默认LLM提供者 (lm_studio 或 ollama)
DEFAULT_LLM_PROVIDER=lm_studio

# 向量数据库配置
CHROMA_PERSIST_DIRECTORY=../vector_db
CHROMA_COLLECTION_NAME=documents

# 文件存储配置
UPLOAD_DIR=../uploads
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,md,png,jpg,jpeg

# Embedding模型配置
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# OCR配置
OCR_ENABLED=true
OCR_LANGUAGE=chi_sim+eng
OCR_DPI=300

# Redis配置（用于异步任务）
REDIS_URL=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
